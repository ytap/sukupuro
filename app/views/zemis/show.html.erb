<%= form_with(model: [@zemis, @new_comment], url: zemi_comments_path(@zemi), local: true) do |form| %>
  <%= form.label :publishe, "ニックネーム:" %>
  <%= form.text_field :publishe %>
  <%= form.label :content, "コメント:" %>
  <%= form.text_area :content %>
  <%= form.submit "Submit Comment" %>
<% end %>

