<h1>詳細ページ</h1>

<p>
  <strong>担当：</strong>
  <%= @zemi&.name %>
</p>


<p>
  <strong>テーマ：</strong>
  <%= @zemi&.abstract %>
</p>

<p>
  <strong>詳細：</strong>
  <%= @zemi&.info %>
</p>

<p>
   <%= link_to 'シラバス', @zemi&.link %>
</p>

<h2>コメント</h2>
<% @comments.each do |comment| %>
  <p><%= comment.content %></p>
<% end %>
<!--
